<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:id="@+id/Relat">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    tools:context="com.example.sagar.buskaro.Bus_Routes_Search_Result" />

        <ImageView
            android:id="@+id/backarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:onClick="backbutton"
            app:srcCompat="@drawable/backarrow" />

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/routesoptions"
        android:layout_width="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_below="@+id/Relat"
        android:layout_height="match_parent" />



    <Button
        android:id="@+id/button3"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buskarobutton"
        android:drawablePadding="-15sp"
        android:elevation="20px"
        android:onClick="busKARO"
        android:text="busKARO"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>